extends ../layout

block append header
  include ../mixins/header
  +header('Patron', false)

block content
  include ../mixins/searchForm
  +searchForm('patrons')

  table
    thead
      tr
        th Name
        th Address
        th Email
        th Library ID
        th Zip
    tbody
      each patron in patrons
        tr
          td: a(href=`/patrons/${patron.id}`)= patron.fullName
          td= patron.address
          td= patron.email
          td= patron.library_id
          td= patron.zip_code
      else
        tr
          td There's nothing here :(
  
  if pages
    include ../includes/_pagination