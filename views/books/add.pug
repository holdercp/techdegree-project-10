extends ../layout

block content
  include ../includes/errors.pug
  form(action='/books/add', method='post')
    p
      label(for='title') Title
      input#title(type='text', name='title', required)
    p
      label(for='author') Author
      input#author(type='text', name='author', required)
    p
      label(for='genre') Genre
      input#genre(type='text', name='genre', required)
    p
      label(for='first_published') First Published
      input#first_published(type='text', name='first_published', pattern='[0-9]{4}', placeholder='1992', minlength='4' maxlength='4')
    p
      input(type='submit', value='Create New Book')
