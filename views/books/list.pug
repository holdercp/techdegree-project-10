extends ../layout

block append header
  include ../mixins/header
  +header('Book', true)

block content
  include ../mixins/searchForm
  +searchForm('books')
  
  table
    thead
      tr
        th Title
        th Author
        th Genre
        th Year Released
    tbody
      each book in books
        tr
          td: a(href=`/books/${book.id}`)= book.title
          td= book.author
          td= book.genre
          td= book.first_published
      else
        tr
          td There's nothing here :(

  if pages
    include ../includes/_pagination
