extends ../layout

block content
  if errors
    ul
      each error in errors
        li.error= error
  form(action='/books/:bookId/update', method='post')
    p
      label(for='title') Title
      input#title(type='text', name='title', value=book.title, required)
    p
      label(for='author') Author
      input#author(type='text', name='author', value=book.author, required)
    p
      label(for='genre') Genre
      input#genre(type='text', name='genre', value=book.genre, required)
    p
      label(for='first_published') First Published
      input#first_published(type='text', name='published', value=book.first_published, pattern='[0-9]{4}', placeholder='1992', minlength='4', maxlength='4')
    p
      input(type='submit', value='Update Book')

  h2 Loan History
  table
    thead
      tr
        th Book
        th Patron
        th Loaned on
        th Return by
        th Returned on
        th Action
    //- TODO: Make dynamic
    tbody
      tr
        td
          a(href='book_detail.html') A Brief History of Time
        td
          a(href='patron_detail.html') Andrew Chalkley
        td 2015-12-12
        td 2015-12-19
        td
        td
          a.button(href='return_book.html') Return Book
