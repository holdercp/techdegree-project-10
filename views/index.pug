extends layout

block content
  p Welcome to #{title}
  ul
    li Books
      ul
        li: a(href='/books/add') New Book
        li: a(href='/books') List All
        li: a(href='/books?filter=overdue') List Overdue
        li: a(href='/books?filter=checked_out') List Checked Out
    li Patrons
      ul
        li: a(href='/patrons/add') New Patron
        li: a(href='/patrons') List All
    li Loans
      ul
        li: a(href='/loans/add') New Loan
        li: a(href='/loans') List All
        li: a(href='/loans?filter=overdue') List Overdue
        li: a(href='/loans?filter=checked_out') List Checked Out
